@page
@model IkenBako.Pages.LoginModel
@{
    ViewData["Title"] = "ログイン";
}

<div class="container">
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
    <h3 id="error"  class="text-center" style="color:red;">
        @if (Model.ErrorMessages != null)
        {
            foreach (var item in Model.ErrorMessages)
            {
                @item <br>
            }
        }
    </h3>

    <form method="POST">
        <div class="form-row">
            <div class="form-group col-md-6 offset-md-3">
                <label for="Target">ID</label>
                <input asp-for="Target" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6 offset-md-3">
                <label for="Password">Password</label>
                <input asp-for="Password" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6 offset-md-3">
                <input class="btn btn-primary mb-2 float-right" id="send" type="submit" value="ログイン" />
            </div>
        </div>
    </form>
</div>

